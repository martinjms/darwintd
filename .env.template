# DarwinTD Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Trading Exchange API Keys
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_SECRET_KEY=your_coinbase_secret_key_here
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_SECRET_KEY=your_kraken_secret_key_here

# Data Sources
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
JINA_AI_API_KEY=your_jina_ai_key_here

# GitHub Integration
GITHUB_TOKEN=your_github_token_here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/darwintd
# Alternative: SQLite for development
# DATABASE_URL=sqlite:///./darwintd.db

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
DATA_DIR=./data
CACHE_DIR=./cache

# Trading Configuration
PAPER_TRADING=True
MAX_POSITION_SIZE=1000  # USD
RISK_TOLERANCE=0.02  # 2%

# Notification Settings (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
SLACK_WEBHOOK_URL=your_slack_webhook_url

# Performance Settings
ENABLE_CACHING=True
CACHE_EXPIRY_SECONDS=3600
MAX_CONCURRENT_REQUESTS=10